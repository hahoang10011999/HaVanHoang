<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food order"
                android:textSize="30sp"/>
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_shopping_cart_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tvFood"
                android:layout_marginRight="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/img"
                android:layout_alignBottom="@+id/img"
                android:text="0"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/bo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome KhoaiHa"
                android:layout_below="@+id/tvFood"
                android:textSize="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp">
            <TextView
                android:id="@+id/tvPizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza Panda"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvKFC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KFC Super"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvEgg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bread Eggs"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvCoca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coca cola"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvChicken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken Super"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvCup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cup Cake"
                android:textSize="@dimen/_25sdp"
                android:layout_margin="@dimen/_10sdp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="@dimen/_30sdp"/>
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_30sdp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btnOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="order"
            android:textSize="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>
    </LinearLayout>
</layout>